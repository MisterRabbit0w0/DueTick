<Window x:Class="DueTick.Views.ConfirmDeleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Height="180"
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        ShowInTaskbar="False">
    <Border Background="{StaticResource WindowBackgroundBrush}"
            CornerRadius="8"
            BorderThickness="1"
            BorderBrush="#D0D0D0"
            Margin="5">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.2"/>
        </Border.Effect>
        <Grid Margin="24,12,24,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Icon -->
            <TextBlock Text="âš "
                       FontSize="32"
                       Foreground="{StaticResource AccentBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,12"/>

            <!-- Message -->
            <TextBlock x:Name="MessageTextBlock"
                       Text="Are you sure you want to delete this deadline?"
                       FontSize="14"
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,16"
                       Grid.Row="1"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Cancel"
                        Width="100"
                        Height="32"
                        Margin="0,0,12,0"
                        Click="CancelButton_Click"/>
                <Button Content="Delete"
                        Style="{StaticResource AccentButtonStyle}"
                        Width="100"
                        Height="32"
                        IsDefault="True"
                        Click="DeleteButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
